{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Expo (F5)",
      "request": "launch",
      "type": "reactnative",
      "expoHostType": "lan",
      "platform": "expoweb",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/*"
      }
    },
    {
      "name": "Attach to packager",
      "request": "attach",
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
    },
    {
      // npx expo start should be already started
      "name": "Launch Chrome 8081",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8081",
      "webRoot": "${workspaceFolder}"
    },
  ]
}